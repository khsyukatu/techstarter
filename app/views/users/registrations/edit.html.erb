<h2>登録情報編集</h2>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "form-horizontal" }) do |f| %>
  <% if @user.errors.any? %>
    <div class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= @user.errors.count %>個のエラーがあります</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>
  
  <fieldset>
    <legend>新規会員登録</legend>
    <div class="form-group">
      <label class="col-lg-2 control-label">メールアドレス</label>
      <div class="col-lg-10">
        <%= f.email_field :email, autofocus: true, class:"form-control" %>
      </div>
    </div>
  
    <div class="form-group">
      <label class="col-lg-2 control-label">パスワード</label>
      <div class="col-lg-10">
        <%= f.password_field :password, autocomplete: "off", class:"form-control" %>
        <span class="help-block">パスワードを変更しない場合には入力は不要です。</span>
      </div>
    </div>
  
    <div class="form-group">
      <label class="col-lg-2 control-label">確認用パスワード</label>
      <div class="col-lg-10">
        <%= f.password_field :password_confirmation, autocomplete: "off", class:"form-control" %>
        <span class="help-block">パスワードを変更しない場合には入力は不要です。</span>
      </div>
    </div>
    
    <div class="form-group">
      <label class="col-lg-2 control-label">現在のパスワード</label>
      <div class="col-lg-10">
        <%= f.password_field :current_password, autocomplete: "off", class:"form-control" %>
         <span class="help-block">変更を反映するには現在のパスワードを入力する必要があります。</span>
      </div>
    </div>
  
    <div class="form-group">
      <div class="col-lg-10 col-lg-offset-2">
        <%= f.submit class: "btn btn-primary" %>
      </div>
    </div>
  </fieldset>
<% end %>