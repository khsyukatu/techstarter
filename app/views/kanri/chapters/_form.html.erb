<%= form_for([:kanri, @chapter], html: { class: "form-horizontal" }) do |f| %>
  <% if @chapter.errors.any? %>
    <div class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= @chapter.errors.count %>個のエラーがあります</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @chapter.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>
  
  <fieldset>
    <div class="form-group">
      <label class="col-lg-2 control-label">レッスン</label>
      <div class="col-lg-3">
  			<%= f.select :lesson_id, Lesson.where(id: @lesson.id).map { |c| [c.title, c.id] }, {}, { class: "form-control" } %>
      </div>
    </div>
    <div class="form-group">
      <label class="col-lg-2 control-label">表示順番</label>
      <div class="col-lg-10">
        <%= f.number_field :number, class: "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <label class="col-lg-2 control-label">タイトル</label>
      <div class="col-lg-10">
        <%= f.text_field :title, class: "form-control" %>
      </div>
    </div>
    
    <div class="form-group">
      <div class="col-lg-10 col-lg-offset-2">
        <%= f.submit class: "btn btn-success" %>
      </div>
    </div>
  </fieldset>
<% end %>