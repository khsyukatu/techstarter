<ul class="breadcrumb">
	<li itemscope="" itemtype="http://data-vocabulary.org/Breadcrumb">
		<a href="/kanri"><span itemprop="title">管理画面top</span></a></li>
	<li itemscope="" itemtype="http://data-vocabulary.org/Breadcrumb">
		<a href="/kanri/lessons" class="page" itemprop="url"><span itemprop="title">レッスン一覧</span></a></li>
  	<li itemscope="" itemtype="http://data-vocabulary.org/Breadcrumb">
  		<a href="/kanri/lessons/<%= @lesson.id %>" class="page" itemprop="url"><span itemprop="title"><%= @lesson.title %></span></a></li>
</ul>

<h1>「<%= @lesson.title %>」内容一覧</h1>
<table class="table table-hover ">
  <thead>
    <tr class="success">
      <th>id</th>
      <th>タイトル</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @chapters.each do |chapter| %>
    <tr>
      <td><%= chapter.id %></td>
      <td><%= chapter.title %></td>
      <td><%= link_to "表示", kanri_chapter_path(chapter), class:"btn btn-success" %></td>
      <td><%= link_to "編集", edit_kanri_chapter_path(chapter), class:"btn btn-success" %></td>
      <td><%= link_to '削除', kanri_chapter_path(chapter), :method => :delete, data: { :confirm => "削除しますが、宜しいですか？" }, class: "btn btn-danger" %></td>
    </tr>
    <% end %>
  </tbody>
</table>
<br>
<%= link_to "chapterを追加する", new_kanri_chapter_path(lesson_id: @lesson.id), class:"btn btn-success" %>