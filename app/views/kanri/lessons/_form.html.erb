<h1>レッスンの編集</h1>
<%= form_for([:kanri, @lesson], html: { class: "form-horizontal" }) do |f| %>
  <% if @lesson.errors.any? %>
    <div class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= @lesson.errors.count %>個のエラーがあります</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @lesson.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>
  
  <fieldset>
    <div class="form-group">
      <label class="col-lg-2 control-label">レッスン名</label>
      <div class="col-lg-10">
        <%= f.text_field :title, class: "form-control" %>
      </div>
    </div>
    
    <div class="form-group">
      <label class="col-lg-2 control-label">公開・非公開</label>
      <div class="col-lg-10">
        <%= f.select :status, [['公開', true], ['非公開', false]], {},{class: "form-control"} %>
      </div>
    </div>
    
    <div class="form-group">
      <label class="col-lg-2 control-label">イメージ</label>
      <div class="col-lg-10">
        <%= f.file_field :image, class: "form-control" %>
      </div>
    </div>
    
    <div class="form-group">
      <label class="col-lg-2 control-label">説明</label>
      <div class="col-lg-10">
        <%= f.text_area :description, class: "form-control" %>
      </div>
    </div>
    
    <div class="form-group">
      <div class="col-lg-10 col-lg-offset-2">
        <%= f.submit class: "btn btn-success" %>
      </div>
    </div>
  </fieldset>
<% end %>